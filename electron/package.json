{
  "name": "Samos-me",
  "version": "0.8.0",
  "description": "Samos nebula storage client",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron --dev .",
    "dist-win32": "build -w --ia32 -p=never",
    "dist-win64": "build -w --x64 -p=never",
    "dist-win": "build -w --x64 --ia32 -p=never",
    "dist-linux32": "build -l --x32 -p=never",
    "dist-linux64": "build -l --x64 -p=never",
    "dist-linux": "build -l --x64 --ia32 -p=never",
    "dist-mac": "build -m --x64 -p=never",
    "pack-linux": "build --dir -l -p=never"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^2.0.4",
    "portfinder": "1.0.13",
    "electron-debug": "^2.0.0",
    "electron-log": "^2.2.16",
    "electron-context-menu": "^0.10.0",
    "electron-updater": "^3.1.1",
    "electron-builder": "20.27.1",
    "jquery": "3.3.1",
    "electron-tabs": "0.9.4"
  },
  "dependencies": {
    "electron-context-menu": "^0.10.0",
    "electron-debug": "^2.0.0",
    "electron-log": "^2.2.16",
    "jquery": "3.3.1"
  },
  "build": {
    "appId": "io.samos.storage",
    "asar": true,
    "asarUnpack": ["**/node_modules/sharp/**/*"],
    "publish": [
      {
        "provider": "generic",
        "url": "http://samos.io/"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
   

    "mac": {
      "category": "public.app-category.productivity",
      "extraFiles": [
        {
          "from": "../client/dist/${os}-${arch}/nebula-client",
          "to": "./Resources/app/"
        }
      ],
      "extraResources": [
        {
          "from": "/usr/local/opt/pbc/lib/",
          "to": "./app/lib/",
          "filter": ["**/*"]
        },
        {
          "from": "/usr/local/opt/gmp/lib/",
          "to": "./app/lib/",
          "filter": ["**/*"]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "extraFiles": [
        {
          "from": "../client/dist/${os}-${arch}/nebula-client.exe",
          "to": "./resources/app/"
        }
      ]
    },
    "linux": {
      "category": "Network",
      "target": [
        "AppImage"
      ],
      "extraFiles": [
        {
          "from": "../client/dist/${os}-${arch}/nebula-client",
          "to": "./resources/app/"
        },
        {
          "from": "../assets/icon512x512.png",
          "to": "./resources/"
        }
      ]
    },
    "extraResources": [
      {
        "from": "../client/web/",
        "to": "./app/web/",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
